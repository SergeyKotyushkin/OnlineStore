@using Resources
@model OnlineStore.MvcWebProject.Models.ManagementModel

@{
    Layout = "~/Views/Layouts/_MainLayout.cshtml";
}

@section StyleSheets
{
    <link rel="Stylesheet" href="@Href("~/Content/StyleSheets/Management.css")"/>
}

@section Scripts
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Management/Management.js?" + DateTime.Now.Ticks)"></script>
}

<div id="managementHeader">@Lang.Management_Header</div>

<input type="text" id="urlToRefresh" style="display: none;" value="@Url.Content("~/" + Model.Settings.SelectedLanguage + "/Management/RefresshTable")"/>
<input type="text" id="urlToEdit" style="display: none;" value="@Url.Content("~/" + Model.Settings.SelectedLanguage + "/Management/Edit")"/>
<input type="text" id="urlToAdd" style="display: none;" value="@Url.Content("~/" + Model.Settings.SelectedLanguage + "/Management/Add")"/>
<div id="managementTableContainer">
    @if (Model.TableData != null && Model.TableData.Data != null)
    {
        @Html.Partial("_managementTable", Model.TableData)
    }
    else
    {
        <div id="managementSearchNoResult">@Lang.Management_SearchNoResult</div>
    }
    <br/>
</div>
